<Application x:Class="Task2_v1_PresentationLayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Task2_v1_PresentationLayer"
             xmlns:views="clr-namespace:PresentationLayer.View"
             xmlns:viewmodels="clr-namespace:Task2_v1_PresentationLayer.ViewModel"
             StartupUri="View\MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MasterCatalog}">
            <views:MasterCatalogView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:DetailCatalog}">
            <views:DetailCatalogView/>
        </DataTemplate>
    </Application.Resources>
</Application>
