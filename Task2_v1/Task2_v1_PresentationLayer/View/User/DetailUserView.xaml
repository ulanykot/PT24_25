<UserControl x:Class="PresentationLayer.View.DetailUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:PresentationLayer.View"
             xmlns:viewmodels="clr-namespace:PresentationLayer.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ObjectDataProvider ObjectType="viewmodels:DetailUser">
            <ObjectDataProvider.ConstructorParameters>
                <x:Null/>
                <x:Null/>
            </ObjectDataProvider.ConstructorParameters>
        </ObjectDataProvider>
    </UserControl.DataContext>

    <Grid Background="White" Margin="0,0,0,21">

        <GroupBox Width="220"
                  HorizontalAlignment="Center"
                  Header="User details" Margin="0,16,0,-14">
            <StackPanel Margin="0,5,0,0"
VerticalAlignment="Top"
Background="White">
                <StackPanel Margin="0,5,0,0"
                        VerticalAlignment="Top"
                        Background="White" Orientation="Horizontal">
                    <Label Content="ID:" Width="85"/>
                    <TextBox Height="20" Width="120"
                         Text="{Binding Id , ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         BorderBrush="Gray" IsReadOnly="True">
                        <Validation.ErrorTemplate>
                            <ControlTemplate>
                                <StackPanel>
                                    <AdornedElementPlaceholder x:Name="placeholder"/>
                                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
                                </StackPanel>
                            </ControlTemplate>
                        </Validation.ErrorTemplate>
                    </TextBox>

                </StackPanel>
                <StackPanel Margin="0,5,0,0"
            VerticalAlignment="Top"
            Background="White" Orientation="Horizontal">

                    <Label Content="Name:" Width="85"/>
                    <TextBox Height="20" Width="120"
                         Text="{Binding Name , ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         BorderBrush="Gray">
                        <Validation.ErrorTemplate>
                            <ControlTemplate>
                                <StackPanel>
                                    <AdornedElementPlaceholder x:Name="placeholder"/>
                                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
                                </StackPanel>
                            </ControlTemplate>
                        </Validation.ErrorTemplate>
                    </TextBox>

                </StackPanel>
                <StackPanel Margin="0,5,0,0"
VerticalAlignment="Top"
Background="White" Orientation="Horizontal">

                    <Label Content="Email:" Width="85"/>
                    <TextBox Height="20" Width="120" 
                         Text="{Binding Email , ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         BorderBrush="Gray">
                        <Validation.ErrorTemplate>
                            <ControlTemplate>
                                <StackPanel>
                                    <AdornedElementPlaceholder x:Name="placeholder"/>
                                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
                                </StackPanel>
                            </ControlTemplate>
                        </Validation.ErrorTemplate>
                    </TextBox>

                </StackPanel>
                <StackPanel Margin="0,5,0,0"
                VerticalAlignment="Top"
                Background="White" Orientation="Horizontal">

                </StackPanel>
            </StackPanel>
        </GroupBox>
        <Button Content="Update" Background="GreenYellow" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.227,0.242" Height="26" Width="90"
            Command="{Binding UpdateUser}"/>
    </Grid>
</UserControl>
